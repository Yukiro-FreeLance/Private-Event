<div class="form__event">
  <%= simple_form_for(@event) do | f | %>
    <%= f.error_notification %>
          <div class="form__inputs">
            <div class="field">
            <%= f.input :name,
                        label: 'Event Name',
                        input_html: { class: 'input' },
                        wrapper: false, label_html: { class: 'label' },
                        required: true,
                        autofocus: true %>
              </div>

              <div class="field">
            <%= f.input :location,
                        label: 'Event Location',
                        input_html: { class: 'input' },
                        wrapper: false, label_html: { class: 'label' },
                        required: true %>
              </div>
                <div class="field-time">
            <%= f.input :date,
                        label: 'Date & Time',
                        input_html: { class: 'datetime' },
                        wrapper: false, label_html: { class: 'label' },
                        required: true %>
              </div>

                <div class="field-desc">
            <%= f.input :description,
                        label: 'Event Description',
                        input_html: { class: 'textarea' },
                        wrapper: false, label_html: { class: 'label' },
                        placeholder: 'The desctiption of your event...' %>
            </div>
              <div class="field">
             <%= f.input :private,
                        label: 'Private Event',
                        input_html: { class: 'checkbox' },
                        wrapper: false, label_html: { class: 'label' } %>
              </div>
        </div>
      <div class="form__actions">
        <%= f.button :submit%>
        <%= link_to "Cancel", events_path,class:"cancel" %>
    </div>

  <% end %>

</div>
