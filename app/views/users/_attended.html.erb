<div class="my__events">
  <h3 class= "title">My Past Events</h3>
      <div class="card__container">
        <% @attended_events.each do | event |%>
          <div class="event__card">
            <p class="event__title"><%= event.name %></p>
            <p class="event__host"><strong>Host:</strong><%= event.creator.username %></strong><br/></p>
              <p class="event__location"><strong>Location:</strong> <%= event.location %></p>
              <p class="event__date"><strong>Date:</strong>
                <%= event.date.strftime("%B")[0,3] %>
                <%= event.date.strftime("%d") %>,
                <%= event.date.year %></p>
                <div class="button__container">
                    <p><%= link_to 'View', event, class: 'btn' %>&nbsp; &nbsp;</p>
                    <p><%= link_to 'Remove', destroy_attending_path(:attendee_id=>current_user.id, :attended_event_id=>event.id),
                                        data: { turbo_method: "delete",
                                                turbo_confirm: "Click OK to confirm withdrawing from this event." },
                                                class: 'btn' %></p>
                  </div>
              </div>
        <% end %>
    </div>
</div>
